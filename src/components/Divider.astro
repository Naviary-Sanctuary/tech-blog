---
interface Props {
  className?: string;
  direction?: "horizontal" | "vertical";
}

const { className, direction = "horizontal" } = Astro.props;
---

<div
  class:list={[
    "shrink-0 bg-zinc-300/70",
    direction === "horizontal" ? "w-full h-px" : "w-px h-auto self-stretch",
    className,
  ]}
>
</div>
